                        <div id="editModeSection" class="form-group row col-12 col-lg-6">
                            <label for="editMode" class="col-5 col-form-label">Translation Mode</label>
                            <div class="col-7">
                                <select id="editMode" class="custom-select">
                                    <option selected value="Default">Default</option>
                                    <option value="Marked">Marked Only</option>
                                    <option value="Incomplete">Incomplete Only</option>
                                    <option value="Complete">Complete Only</option>
                                </select>
                            </div>
                        </div>

                    </div>

                    <div id="utilsSection" class="btn-toolbar row col-12 justify-content-between" role="toolbar" aria-label="Toolbar with button groups">

                        <div class="btn-group btn-group-sm" role="group" aria-label="Line Utilities">
                            <button id="insertLine" type="button" class="btn btn-outline-success" data-bind="click: InsertLine(CurrentIndex())" data-toggle="tooltip" data-placement="top" title="Inserts new line at current line">Insert Line</button>
                            <button id="removeLine" type="button" class="btn btn-outline-danger" data-bind="click: RemoveLine(CurrentIndex())" data-toggle="tooltip" data-placement="top" title="Removes current line">Remove Line</button>
                        </div>

                        <div class="btn-group btn-group-sm" role="group" aria-label="Save Utilities">
                            <button id="saveProject" type="button" class="btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Temporarily Saves Project in Session">Save</button>
                            <button id="downloadProject" type="button" class="btn btn-outline-success" data-toggle="tooltip" data-placement="top" title="Saves and Downloads Current Project to Disk">Download</button>
                            <button id="exportProject" type="button" class="btn btn-outline-info" data-toggle="tooltip" data-placement="top" title="Exports Translation to Disk">Export</button>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
