@using Gem;

@{
    ViewBag.Title = "Translator Studio - Dashboard";
    var percentage = ViewBag.percentage;
    //int percentage = Model.NumberOfLines != 0 ? percentage = ((Model.NumberOfCompletedLines / Model.NumberOfLines) * 100) : 0;

    //List<Furigana> furigana = new List<Furigana>();

    //foreach (var item in Model.RawLines)
    //{
    //    furigana.Add(new Furigana(item));
    //}

}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <h2>Dashboard</h2>
            <div id="status" class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Project Details</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row table-responsive">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th>
                                                <label class="control-label" for="ProjectName">Project Name</label>
                                            </th>
                                            <td>
                                                <input id="ProjectName" class="form-control" data-bind="value: ProjectName()" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <label class="control-label" for="CurrentLine">Current Line</label>
                                            </th>
                                            <td>
                                                <div id="CurrentLine" class="text-center">
                                                    <span id="CurrentIndex" data-bind="text: (currentIndex() + 1)"></span> / <span id="NumberOfLines" class="NumberOfLines" data-bind="text: NumberOfLines"></span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <label class="control-label" for="Progress">Progress</label>
                                            </th>
                                            <td>
                                                <div id="Progress" class="text-center">
                                                    <span data-bind="text: NumberOfCompletedLines()"></span> / <span class="NumberOfLines" data-bind="text: NumberOfLines"></span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <script src="~/Javascript/ProgressBarComponent.js"></script>
                                                <div class="row col-xs-12 col-xs-offset-0">
                                                    <progress-bar params="progress: currentProgress"></progress-bar>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-9">
            <div class="col-xs-12">
                <h2>Desk</h2>
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#deskTab">Desk</a></li>
                    <li><a data-toggle="tab" href="#previewTab">Preview</a></li>
                </ul>

                <div class="tab-content">
                    <div id="deskTab" class="tab-pane fade in active">
                        @Html.Partial("_Desk")
                    </div>
                    <div id="previewTab" class="tab-pane fade">
                        @Html.Partial("_Preview")
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>