@model OnlineTranslatorStudio.Models.OnlineTranslationRequest

@{
    ViewBag.Title = "Translator Studio";
}

<h2>Welcome to the Translator Studio</h2>

<div class="row">
    <div class="col-md-10 col-md-push-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#openBody">Open an Existing Translation Project</a>
                </h4>
            </div>
            <div id="openBody" class="panel-body panel-collapse collapse">
                <form class="form-horizontal" method="post" action="~/Studio/Dashboard" enctype="multipart/form-data">

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="project">Open Project</label>
                        <div class="col-md-10">
                            <input class="form-control" placeholder="Load TSP or Text File" type="file" name="project" id="projectFile" accept="text/txt, text/tsp, .txt, .tsp" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <div class="col-md-10">
                            <input class="btn btn-primary" type="submit" name="submit" value="Open" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-10 col-md-push-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#createBody">Create a New Translation Project</a>
                </h4>
            </div>
            <div id="createBody" class="panel-body panel-collapse collapse">

                @using (Html.BeginForm("Dashboard", "Studio", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.ProjectName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(Model => Model.ProjectName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.RawData, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(Model => Model.RawData, 10, 100, new { @class = "form-control", style = "max-width: 100%; width: 80%;" })
                        @*@Html.EditorFor(Model => Model.RawData, new { @class = "form-control", rows = "20" })*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input class="btn btn-primary" type="submit" name="submit" value="Create" />
                    </div>
                </div>
                }

            </div>
        </div>
    </div>
</div>


