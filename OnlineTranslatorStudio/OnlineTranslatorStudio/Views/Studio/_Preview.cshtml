<div id="preview" class="row col-xs-12">
    <h4>Translation Preview</h4>
    <div class="panel panel-default col-xs-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th width="47%">Raw</th>
                            <th width="47%">Translation</th>
                            <th width="6%"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <!-- ko foreach: RawLines -->
                        <tr data-bind="css: { 'success': $parent.CompletedLines()[$index()], 'warning': $parent.MarkedLines()[$index()]}">
                            <td><span data-bind="text: $parent.RawLines()[$index()]"></span></td>
                            <td><span data-bind="text: $parent.TranslatedLines()[$index()]"></span></td>
                            <td><a class="btn btn-block btn-default text-center"><span class="glyphicon glyphicon-option-vertical"></span></a></td>
                        </tr>
                        <!-- /ko -->
                    </tbody>

                    @*@for (int i = 0; i < Model.NumberOfLines; i++)
                    {
                        <tr>
                            <td>@Model.RawLines[i]</td>
                            <td>@Model.TranslatedLines[i]</td>
                            <td>@furigana[i].ReadingHtml</td>
                            <td><input class="form-control" type="text" value="@Model.TranslatedLines[i]" /></td>
                        </tr>
                    }*@
                </table>
            </div>
        </div>
    </div>
</div>