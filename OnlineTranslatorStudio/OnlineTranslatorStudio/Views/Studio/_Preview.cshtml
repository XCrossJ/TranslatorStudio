<div id="preview">
    <div class="card">
        <div class="card-header">
            <h4 class="float-left mb-0 card-title">Translation Preview</h4>
            <!-- Button to Open the Modal -->
            <button type="button" class="btn btn-outline-secondary float-right" data-toggle="modal" data-target="#previewModal">
                Full Screen Preview
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th width="6%">No.</th>
                            <th width="47%">Raw</th>
                            <th width="47%">Translation</th>
                        </tr>
                    </thead>

                    <tbody>
                        <!-- ko foreach: ProjectLines -->
                        <tr data-bind="css: { 'table-success': Completed, 'table-warning': Marked}">
                            <td><span data-bind="text: $index() + 1"></span></td>
                            <td><span data-bind="text: Raw"></span></td>
                            <td><span data-bind="text: Translation"></span></td>
                            @*<td><a class="btn btn-block btn-default text-center"><span class="glyphicon glyphicon-option-vertical"></span></a></td>*@
                        </tr>
                        <!-- /ko -->
                    </tbody>

                    @*@for (int i = 0; i < Model.NumberOfLines; i++)
                        {
                            <tr>
                                <td>@Model.RawLines[i]</td>
                                <td>@Model.TranslatedLines[i]</td>
                                <td>@furigana[i].ReadingHtml</td>
                                <td><input class="form-control" type="text" value="@Model.TranslatedLines[i]" /></td>
                            </tr>
                        }*@
                </table>
            </div>
        </div>
    </div>
</div>


<!-- The Modal -->
<div class="modal fade" id="previewModal">
    <div class="modal-dialog modal-dialog-centered modal-lg" style="max-width: 80%;">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Translation Preview</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th width="10%">No.</th>
                                <th width="45%">Raw</th>
                                <th width="45%">Translation</th>
                            </tr>
                        </thead>

                        <tbody>
                            <!-- ko foreach: ProjectLines -->
                            <tr data-bind="css: { 'table-success': Completed, 'table-warning': Marked}">
                                <td><span data-bind="text: $index() + 1"></span></td>
                                <td><span data-bind="text: Raw"></span></td>
                                <td><span data-bind="text: Translation"></span></td>
                            </tr>
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>